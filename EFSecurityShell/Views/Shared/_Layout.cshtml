<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/images/MasonM_green.png" />
    <title>@ViewBag.Title  George Mason University</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top custom-navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("George Mason University", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Apply Now", "Create", "Applications")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <footer class="bottom">
        <div class="custom-footer container-fluid row">
            <div class="col-sm-6 text-center">
                <h3 id="gmuyellow">Patriots Brave & Bold</h3>
                <p>
                    George Mason University<br />
                    4400 University Drive<br />
                    Fairfax, Virginia 22030<br />
                    Tel: +1(703)993-1000
                </p>
                <p>&copy; @DateTime.Now.Year - George Mason University</p><br />
                <hr width="50%" />
            </div>
            <div class="col-sm-6">
                <img src="~/images/MasonM_MasonMblack.png" class="img-responsive" style="height:400px;"/>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
