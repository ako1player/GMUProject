@{
    ViewBag.Title = "";
}

<h1>Welcome To George Mason University!</h1>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!--Indicators-->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!--Wrapper for slides-->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/images/140828519sq.jpg" alt="Students" style="width: 1200px; height: 600px;" />
        </div>
        <div class="item">
            <img src="~/images/190305054.jpg" alt="Girls Basketball Game" style="width: 1200px; height: 600px;" />
        </div>
        <div class="item">
            <img src="~/images/200827007.jpg" alt="Mascot" style="width: 1200px; height: 600px;" />
        </div>
    </div>

    <!--Left and Right controls-->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a><a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container-fluid">
    <div class="row">
        <h2>Some Programs We Offer!</h2>
        <div class="col-sm-4"><h4>Information Technology</h4></div>
        <div class="col-sm-4"><h4>Computer Science</h4></div>
        <div class="col-sm-4"><h4>Engineering</h4></div>
        <div class="col-sm-4"><h4>Business</h4></div>
        <div class="col-sm-4"><h4>Nursing</h4></div>
        <div class="col-sm-4"><h4>And Many More!</h4></div>
    </div>
    <div class="row gmuinfo">
        <h2>Information</h2>
        <div class="col-sm-6">
            <div class="dropdown">
                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">
                    Prospective Students
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Apply To Mason", "Login", "Account")</li>
                    <li><a href="https://www.gmu.edu/virtual-experience">Campus Tour</a></li>
                    <li><a href="https://www2.gmu.edu/academics">Explore Programs</a></li>
                </ul>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="dropdown">
                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown">
                    Staff and Faculty
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Log In", "Login", "Account")</li>
                    <li><a href="#">Human Resources</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div>
    <h2>Why Should You Apply To George Mason University?</h2>
    <h4>
        George Mason University is right at the heart of NoVa. A lot of companies are in the area, with a lot of companies coming to Mason career fairs. Washington DC is also in proximity
        making GMU a great place to earn your degree! Among being in the middle of all the big tech companies, George Mason is one of the most diverse colleges in the Country. 
    </h4>
</div>
